{{ template "header.gohtml" .}}

<p class="title">Official news</p>

<style>
    .limitHeight {
        height: 60vh;
        overflow: auto
    }
</style>

<div class="columns">
    <div class="column is-half">
        <div class="box">
        <span class="icon-text">
          <span class="icon has-text-info">
            <ion-icon class="ion-ionic" name="logo-twitter"></ion-icon>
          </span>
          <span>Twitter</span>
        </span>
            <div class="limitHeight">
                <a class="twitter-timeline" href="https://twitter.com/DecaGear?ref_src=twsrc%5Etfw">Tweets by
                    DecaGear</a>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="box">
            <p>DecaNews</p>
