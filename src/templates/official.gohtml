    <div class="column">
        <div class="box">
            <span class="icon-text">
          <span class="icon has-text-info">
            <ion-icon class="ion-ionic" name="logo-discord"></ion-icon>
          </span>
          <span>Deca Discord</span>
        </span>
            <div class="limitHeight">
                <a class="deca-discord" href="https://discord.gg/d7YG7qD">Official Deca Discord</a>
            </div>
        </div>
    </div>
</div>
